<%@ Control Language="C#" AutoEventWireup="true" CodeBehind="BannerImagesView.ascx.cs" Inherits="CWM.Website.Views.BannerImagesView" %>

<!-- parent banner div-->
	   	 <div id="banner"  class="grid_16" data-animate="true" data-panel="hideOnFirst">
	   			 
			<!--info panel div-->
			<div id="infoPanel">
			    
			    <!--open & close info panel buttons-->
			    <a href="#" id="closeInfo"><img src="/img/icons/slider_close.png" alt="close info button" /></a>
			    <a href="#" id="openInfo"><img src="/img/icons/slider_open.png" alt="open info button" /></a>
			    
			    <!--slide buttons-->
			    <div id="navigator">
				    <ul>
					   <li><a  class="currentSlide" href="#">1</a></li>
				    </ul>
			    </div>
			    
			    <!--current caption display-->
			    <div id="info">
				   <h1 class="clearfix"><a href="#" title="Featured Item">Item 1 Title</a></h1>
				   <h3>Item Subtitle</h3>
				  
			    </div>
			    
			    <!--previous slide button-->
			    <a href="#" id="prev"><img src="/img/icons/slider_prev.png" alt="preious slide button" /></a>
			   
			</div>
			<!--end info panel div-->
			
			<!--images with caption info attached-->
            <div runat="server" id="divImages" />
			<!--end slide images-->
			
			<!--next slide button--> <!--add class="hide" with js to hide vid close button-->
			<div id="nextSlide">
			   <a href="#" id="closeVideo" title="Close Video"><img src="/img/icons/slider_vid_close.png" alt="close video button" /></a>
			   <a href="#" id="next" title="Next Slide"><img src="/img/icons/slider_next.png" alt="next slide button" /></a>
			</div>
	   			 
	   	 </div>
	   	<!--end banner -->